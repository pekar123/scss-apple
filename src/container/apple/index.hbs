<div class="page">
  {{#with header}}
  <div class="header">
    <heder class="header__content">
      <div class="header__block">
        <img src="/svg/apple-header.svg" alt="Apple" class="header__icon">
        <nav class="header__block">
          {{#each links}}
          <a href="{{url}}" class="header__link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header__action">
        <img src="/svg/search.svg" alt="Search" class="header__icon">
        <img src="/svg/profile.svg" alt="Shop" class="header__icon">
      </div>
    </heder>
  </div>

  {{#with ad}}
  <div class="header__info">
    <div class="content__info">
      <div class="info_title">{{title}}</div>
      {{#with link}}
      <div class="info_link">
        <a href="{{url}}" class="info__shop">{{text}}</a>
        {{!-- <img src="/svg/arrow-blue.svg" alt="Arrow" class="header__icon"> --}}
      </div>
      {{/with}}

    </div>
  </div>

  {{/with}}
  {{/with}}

